<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<main>
        <section>
            <h2>Welcome to Codeial</h2>
            <p>Connect with friends, share your thoughts and experiences, and explore new ideas on Codeial.</p>
            <a href="/users/sign-up"><button class=".b">Sign Up</button></a>
            <a href="/users/sign-in"><button class=".b">Log In</button></a>
                
        </section>
    
        <section>
            <h2>Popular Posts</h2>
            <!-- Adding post partials -->
             <%-include('_post')%>
              
        </section>
    
        <section id="users-friends">
            <h2>Recent Activity</h2>
            <ul>
                <% for(u of all_users){%>
                  <li>
                    <p>
                      <a href="/users/profile/<%=u.id%>"><%=u.name%></a>
                    </p>
                  </li>

                <%}%>
            </ul>
        </section>
    </main>
